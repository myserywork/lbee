<!DOCTYPE html>
<html>
<head>
  <title>Lbee</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'main', media: 'all', 'data-turbolinks-track' => true  unless @admin_style %>
  <%= stylesheet_link_tag    'news', media: 'all', 'data-turbolinks-track' => true  unless @admin_style %>
  <%= stylesheet_link_tag    'normalize', media: 'all', 'data-turbolinks-track' => true unless @admin_style  %>
  <%= stylesheet_link_tag    'font-face', media: 'all', 'data-turbolinks-track' => true unless @admin_style %>
  <%= stylesheet_link_tag    'font-awesome', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'owl.carousel', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'owl.theme', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'owl.transitions', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'owl.carousel', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'scripts', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'bootstrap', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'jquery', 'data-turbolinks-track' => true %>
  <!--<script src='https://www.google.com/recaptcha/api.js'></script>-->
  <%= csrf_meta_tags %>
  <% if @admin_style %>
    <link href="/assets/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/sb-admin.css" rel="stylesheet">
    <link href="/assets/font-awesome.css" rel="stylesheet">
  <% end %>
</head>
<body>

<%= render 'layouts/header' unless @admin_style %>
<%= yield %>
<%= render 'layouts/footer' unless @admin_style %>

<script src="/assets/jquery-1.11.3.min.js"></script>
<script src="/assets/outside-events.min.js"></script>
<script src="/assets/scripts.js"></script>
<script src="/assets/owl.carousel.js"></script>
</body>
</html>
